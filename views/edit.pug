extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 #{title}

                form(method='POST' action='/edit')
                    div.form-group
                        label(for='linkname') Name:
                        input#linkname.form-control(
                            type='text',
                            name='linkname'
                            value= linkname,
                        )
                    div.form-group
                        label(for='dest') Destination:
                        input#dest.form-control(
                            type='text',
                            value= old_dest,
                            name= "dest"
                        )
                    div.form-group
                        label(for='author') Destination:
                        input#author.form-control(
                        type='text',
                        value= author,
                        name="author",
                        disabled="true"
                        )
                    input.btn.btn-primary(type='submit', value='Submit')
        script(src='//code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
        script(src='//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
