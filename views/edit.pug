html
    head
        title= "Edit GoLink"
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    body
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Edit

                form(method='POST' action='/edit')
                    div.form-group
                        label(for='linkname') Name:
                        input#linkname.form-control(
                            type='text',
                            placeholder='linkname',
                            name='linkname'
                            value= linkname,
                        )
                    div.form-group
                        label(for='dest') Destination:
                        input#dest(
                            value= old_dest,
                            name= "dest"
                        )
                    input.btn.btn-primary(type='submit', value='Submit')
        script(src='//code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
        script(src='//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
        script(src='//stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
